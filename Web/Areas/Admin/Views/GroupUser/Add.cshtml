  
@model GroupUser
@using (Html.AjaxBeginForm("Add", "GroupUser", new AjaxOptions
 {
     HttpMethod = "POST",
     OnSuccess = "groupuser.onSaveResult"
 },
 new { @id = "basicForm", @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label">Tên nhóm<span class="asterisk"> *</span></label>
        <div class="col-md-10">
            @Html.TextBoxFor(g => g.Name, new { @class = "form-control", placeholder = "Tên nhóm người dùng" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 pull-right">
            <div class="checkbox checkbox-primary">
                <input id="Status" name="Status" type="checkbox" checked="" value="true">
                <label for="Status">
                    Kích hoạt
                </label>
            </div>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <button type="submit" class="btn btn-primary waves-effect waves-light">Thêm mới</button>
    </div>
}
<script> 
    $(document).ready(function () {
        $("#basicForm").validate({
            rules:
        {
            Name:
            {
                required: true
            }
        },
            messages:
            {
                Name:
                {
                    required: "Chưa nhập tên nhóm người dùng"
                },
            }
        });
    });
</script>