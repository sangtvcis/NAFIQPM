
@{
    ViewBag.Title = "Menu hệ thống quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Quản lý menu admin</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    @if (ViewBag.IsAdmin || (ViewBag.Roles != null && ViewBag.Roles.Contains("AdminMenu.Add")))
                    {
                        <button type="button" class="btn btn-primary waves-effect waves-light" onclick=" adminmenu.loadfrmAdd() "><i class="fa fa-plus"></i> Thêm mới</button>
                    }
                    @if (ViewBag.IsAdmin || (ViewBag.Roles != null && ViewBag.Roles.Contains("AdminMenu.Add")))
                    {
                        <button type="button" class="btn btn-success waves-effect waves-light" onclick=" adminmenu.onupdateposittion() "><i class="fa fa-refresh"></i> Cập nhật vị trí</button>
                    }
                    @if (ViewBag.IsAdmin || (ViewBag.Roles != null && ViewBag.Roles.Contains("AdminMenu.Add")))
                    {
                        <button type="button" class="btn btn-danger waves-effect waves-light" onclick=" adminmenu.onmultidelete() "><i class="fa fa-trash-o"></i> Xóa nhiều</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridData">
                        </div>
                        <div class="col-md-12" id="paginationholder">
                            <ul id="pagination" class="pagination"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/AppJs/adminmenu.js"></script>
<script> 
    $(document).ready(function () {
        adminmenu.loadData(1);
    });
</script>

