<script>
    $(document).ajaxError(function (e, xhr) {
        if (xhr.status == 403) {
            alertmsg.error("Không có quyền truy cập chức năng");
            $("#loading").hide();
        }
    });
    var displayadminmenu = function () {
        var url_current = window.location.pathname; 
        AjaxService.GET("/Admin/AdminMenu/MenuLeft?url=" + url_current, null, function (res) {
            $("#sidebar-menu").html(res.viewContent.result);
        });
    }
    displayadminmenu();
     
    $('#sidebar-menu').slimScroll({
        height: '90%',
    });
</script>